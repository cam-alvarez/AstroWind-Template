  <Fragment slot="announcement"></Fragment>
  <Fragment slot="header">
    <Header
      links={[
        { text: 'About', href: '#hero' },
        { text: 'Resume', href: '#resume' },
        { text: 'Portfolio', href: '#portfolio' },
        { text: 'Blog', href: '/blog' },
        { text: 'Github', href: 'https://github.com/cam-alvarez' },
      ]}/>
