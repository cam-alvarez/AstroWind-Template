---
import Layout from '~/layouts/PageLayout.astro'
---

<Layout>
  <style>
    /* Existing styles */
    .back-button {
      text-align: left;
      margin-top: 20px;
    }
    .back-button a {
      text-decoration: none;
      color: #007bff;
    }
    .back-button a:hover {
      text-decoration: underline;
    }
    .center-content {
      display: flex;
      flex-direction: column;
      align-items: center;
    }
    .spacer {
      margin-top: 30px;
    }
    button {
      border: 2px solid #007bff;
      padding: 10px 20px;
      background-color: #f1f1f1;
      color: #333;
      border-radius: 12px;
    }
    h2 {
      font-size: 2em;
      margin-bottom: 20px;
    }
    label {
      font-weight: bold;
      margin-right: 10px;
    }
    input {
      margin-bottom: 20px;
      color: #333;
    }
    #habits {
      margin-top: 20px;
      font-size: 1.2em;
    }
  </style>
  <div class="content-container">
    <section>
      <div class="center-content">
        <div class="back-button">
          <a href="/school">&#8592; Back to Web Tools Index</a>
        </div>
        <div class="spacer"></div>
        <h2>Habit Tracker</h2>
        <div>
          <label for="habitName">Habit:</label>
          <input type="text" id="habitName" placeholder="e.g. Exercise">
        </div>
        <button id="addButton">Add Habit</button>
        <div id="habits"></div>
      </div>
    </section>
  </div>
  <script client:load>
    document.addEventListener("DOMContentLoaded", function() {
      const addButton = document.getElementById('addButton');

      addButton.addEventListener('click', function() {
        const habitName = document.getElementById('habitName').value;

        if (!habitName) {
          alert('Please enter a habit.');
          return;
        }

        const habitList = document.getElementById('habits');
        const habitDiv = document.createElement('div');
        habitDiv.innerHTML = `
          <span>${habitName}</span>
          <label><input type="checkbox"> Sun</label>
          <label><input type="checkbox"> Mon</label>
          <label><input type="checkbox"> Tue</label>
          <label><input type="checkbox"> Wed</label>
          <label><input type="checkbox"> Thu</label>
          <label><input type="checkbox"> Fri</label>
          <label><input type="checkbox"> Sat</label>
        `;

        habitList.appendChild(habitDiv);

        // Clear the input field after adding the habit
        document.getElementById('habitName').value = '';
      });
    });
  </script>
</Layout>
